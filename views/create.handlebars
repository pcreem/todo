{{#if todo}}
<form action="/todos/{{todo.id}}?_method=PUT" method="POST">
  {{else}}
  <form action="/todos" method="POST">
    {{/if}}

    <div class="form-group">
      <label for="status">Status</label>
      <input type="text" class="form-control" name="status" id="status" placeholder="Enter status"
        value="{{todo.status}}">
    </div>

    <div class="form-group">
      <label for="item">Item</label>
      <input type="text" class="form-control" name="item" id="item" placeholder="Enter item" value="{{todo.item}}">
    </div>

    <div class="form-group">
      <label for="deadline">Deadline</label>
      <input type="date" class="form-control" name="deadline" id="deadline" placeholder="Enter deadline"
        value="{{todo.deadline}}">
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      <input type="text" class="form-control" name="category" id="category" placeholder="Enter category"
        value="{{todo.category}}">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>